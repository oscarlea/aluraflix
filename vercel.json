{
    "rewrites": [
      {
        "source": "/api/:path*",
        "destination": "http://localhost:4000/api/:path*"
      }
    ],
    "env": {
      "DB_FILE": "src/data/db.json"
    },
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "src/index.js",
        "use": "@vercel/static-build"
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/.*", "dest": "/index.html" }
    ]
  }
  